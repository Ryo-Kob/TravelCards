<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.rkb.travelcards.ui.card.CardFragment"
        android:label="@string/title_card"
        tools:layout="@layout/fragment_card" />

    <fragment
        android:id="@+id/navigation_plan"
        android:name="com.rkb.travelcards.ui.planEditor1.PlanFragment"
        android:label="@string/title_plan1_long"
        tools:layout="@layout/fragment_plan" />

    <fragment
        android:id="@+id/navigation_plan2"
        android:name="com.rkb.travelcards.ui.planEditor2.PlanFragment2"
        android:label="@string/title_plan2_long"
        tools:layout="@layout/fragment_plan" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.rkb.travelcards.ui.setting.SettingFragment"
        android:label="@string/title_viewer"
        tools:layout="@layout/fragment_settings" />
</navigation>